<% if Rails.env.development? %>
fbKey = 1416632615239905
<% elsif Rails.env.test? %>
fbKey = 1416632615239905
<% elsif Rails.env.production? %>
fbKey = 586910084712294
<% end %>

jQuery ->
  $('body').prepend('<div id="fb-root"></div>')

  $.ajax
    url: "#{window.location.protocol}//connect.facebook.net/en_US/all.js"
    dataType: 'script'
    cache: true

  window.fbAsyncInit = ->
    FB.init(appId: fbKey, cookie: true)

    $('#sign_in').click (e) ->
      e.preventDefault()
      FB.login ((response) ->
        <%# requesting scope http://stackoverflow.com/a/12663627/2474735 %>
        window.location = '/auth/facebook/callback' if response.authResponse), scope: "email, user_birthday, user_likes"

    $('#sign_out').click (e) ->
      FB.getLoginStatus (response) ->
        FB.logout() if response.authResponse
      true
