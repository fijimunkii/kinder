= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :fb_id
    = f.text_field :fb_id
  .field
    = f.label :oauth_token
    = f.text_field :oauth_token
  .field
    = f.label :oauth_expires_at
    = f.datetime_select :oauth_expires_at
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :bio
    = f.text_area :bio
  .field
    = f.label :img_url
    = f.text_field :img_url
  .actions
    = f.submit 'Save'
